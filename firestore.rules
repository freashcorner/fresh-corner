rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users — নিজের data নিজে পড়তে/লিখতে পারবে, admin সব দেখতে পারবে
    match /users/{userId} {
      allow read: if request.auth.uid == userId || request.auth.token.role == 'admin';
      allow write: if request.auth.uid == userId || request.auth.token.role == 'admin';
    }

    // Products — যে কেউ পড়তে পারবে, admin লিখতে পারবে
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Categories — যে কেউ পড়তে পারবে, admin লিখতে পারবে
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Orders — customer নিজেরটা দেখতে পারবে, admin সব দেখতে পারবে
    match /orders/{orderId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId || request.auth.token.role == 'admin');
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.token.role == 'admin';
      allow delete: if false;
    }

    // Deliveries — শুধু admin
    match /deliveries/{orderId} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Settings — যে কেউ পড়তে পারবে, admin লিখতে পারবে
    match /settings/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
